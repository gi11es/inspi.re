#currency_options a {	color: #222;	font-weight: bold;}.explanations a {	color: #222;	font-weight: bold;}#currency_options {	width: 100%;	text-align: center;	margin-bottom: 20px;}#donation_options {	width: 100%;	text-align: center;	margin-bottom: 10px;	line-height: 50px;}#credit_cards {	vertical-align: middle;	margin-top: 5px;}#currencies {	overflow: hidden;	margin-bottom: 20px;}.purchase_link img {	border: none;	vertical-align: middle;}.purchase_link {	text-decoration: none;	font-weight: bold;	color: #222;	font-size: 20px;	border: 1px solid #333;	padding: 2px;	clear: both;	background-color: #ffd642;	background-image: url('../graphics/purchase-button-background.gif');	background-repeat: repeat-x;}#chart_right {	padding-top: 29px;	float: right;	margin-right: 50px;}#chart_left {	float: left;	margin-left: 50px;}#chart_middle {	float: left;	margin-left: 55px;	padding-top: 70px;}#charts {	margin-bottom: 10px;	overflow: hidden;}	#generate_submit {	margin-left: 10px;}#code {	font-size: 25px;	margin-top: 15px;}.blackusername a {	color: #222;	font-weight: bold;}.activate {	margin-top: 20px;	line-height: 25px;	font-size: 20px;}#activate_code {	margin-left: 10px;}#activate_submit {	margin-left: 10px;	vertical-align: middle;}#activate_code {	width: 350px;	border: 1px solid #000;	font-size: 20px;}#activation_result {	margin-top: 10px;	height: 20px;}.activation_error {	color: #f00;	font-weight: bold;}.activation_success {	color: #000;	font-weight: bold;}.canvas a {	color: #222;	font-weight: bold;}